{
    "version": 1,
    "description": "Splashscreen",
    "commands": [
        { "kind": "package", "name": "plymouth" },
        { "kind": "package", "name": "plymouth-theme-bgrt" },
        { "kind": "symlink", "source": "config/mkinitcpio/000_plymouth.conf", "target": "/etc/mkinitcpio.conf.d/000_plymouth.conf" },
        { "kind": "shell", "script": [
            "plymouth-set-default-theme -R bgrt",
            "mkinitcpio -P"
        ] }
    ]
}
