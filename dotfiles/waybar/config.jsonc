    "battery": {
        "interval": 3,
        "states": {
            "warning": 30,
            "critical": 15
        },
        "format": "{capacity}% {power:.2f}W {icon}",
        "format-full": "{capacity}% {icon}",
        "format-charging": "{capacity}% {power:.2f}W Ôá¶",
