    },

    "group/hardware": {
        "orientation": "horizontal",
        "modules": ["cpu", "memory"]
    },

    "cpu": {
        "format": "{usage}% Ôãõ",
        "tooltip": false
    },

    "memory": {
        "format": "{}% ÔÉâ"
    },

    "network": {
        // "interface": "wlp2*", // (Optional) To force the use of this interface
        "format-wifi": "{essid} ({signalStrength}%) Ôá´",
